<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.abhaychauhan.www.udacityunofficialclient">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".Splashscreen" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".FreeCourseActivity"
            android:label="Free Course catalog"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".NanodegreeActivity"
            android:label="Nanodegree"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TracksActivity"
            android:label="Course Tracks"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".FreeCourseDetailActivity"
            android:label="@string/course_details"
            android:parentActivityName=".FreeCourseActivity" />
        <activity
            android:name=".NanodegreeDetailActivity"
            android:label="Nanodegree Details"
            android:parentActivityName=".NanodegreeActivity" />
        <activity android:name=".TracksDetailsActivity"></activity>
    </application>

</manifest>